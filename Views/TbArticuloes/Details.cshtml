@model MVCCRUD.Models.TbArticulo

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="table-responsive">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th class="col-sm-2">Nombre del Articulo:</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.NomArt)</td>
            </tr>
            <tr>
                <th>Unidad de Medida:</th>
                <td>@Html.DisplayFor(model => model.UniMed)</td>
            </tr>
            <tr>
                <th>Precio del Articulo:</th>
                <td>@Html.DisplayFor(model => model.PreArt)</td>
            </tr>
            <tr>
                <th>Stock del Articulo:</th>
                <td>@Html.DisplayFor(model => model.StkArt)</td>
            </tr>
            <tr>
                <th>Estado de Baja:</th>
                <td>@Html.DisplayFor(model => model.DeBaja)</td>
            </tr>
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.CodArt" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
